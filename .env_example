# =============================================================================
# MCP Microsoft Office - Environment Configuration
# =============================================================================
# Copy this file to .env and configure with your actual values

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=production
PORT=3000
SERVER_URL=https://yourdomain.com

# =============================================================================
# Security Configuration
# =============================================================================
# JWT secret for device authentication (REQUIRED in production - use strong random string)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# Device registry encryption key (REQUIRED in production - use strong random string)
DEVICE_REGISTRY_ENCRYPTION_KEY=your-device-encryption-key-minimum-32-characters

# =============================================================================
# HTTPS Configuration (Optional - can use reverse proxy instead)
# =============================================================================
ENABLE_HTTPS=false
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins for production
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# Microsoft Azure Configuration
# =============================================================================
MICROSOFT_CLIENT_ID=your-client-id
MICROSOFT_TENANT_ID=your_tenant_id
MICROSOFT_REDIRECT_URI=https://yourdomain.com/auth/callback

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
# Authentication endpoints rate limit (requests per 15 minutes)
AUTH_RATE_LIMIT=100

# General API endpoints rate limit (requests per 15 minutes)
API_RATE_LIMIT=1000

# =============================================================================
# Database Configuration
# =============================================================================
# Database type: sqlite, postgresql, mysql
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/mcp-office.db

# For PostgreSQL/MySQL (optional)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=mcp_office
DATABASE_USER=mcp_user
DATABASE_PASSWORD=your_database_password

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/mcp-office.log
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# LLM Provider Configuration (Optional)
# =============================================================================
LLM_PROVIDER=claude  # or openai
CLAUDE_API_KEY=your_claude_api_key
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# Optional Integrations
# =============================================================================
# Monitoring and analytics (optional)
ENABLE_MONITORING=false
MONITORING_API_KEY=your_monitoring_key

# Email notifications (optional)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=notifications@yourdomain.com
SMTP_PASSWORD=your_smtp_password